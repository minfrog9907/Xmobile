<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cameraResult_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장경로: \\image_receipt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#8073F1E2"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="8.1"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"
            android:orientation="vertical"
            android:weightSum="10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지를 터치하여 위치를 설정해주세요"
                android:textSize="11dp"
                android:textColor="#73F1E2"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/cameraResult_Image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:scaleType="fitCenter" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="2"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-15dp"
        android:orientation="horizontal">



        <com.example.hp.xmoblie.Custom.SideStick_BTN
            android:id="@+id/cameraResult_Upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:symbol="@drawable/upload"
            app:text="업로드" />


        <com.example.hp.xmoblie.Custom.SideStick_BTN
            android:id="@+id/cameraResult_Share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:symbol="@drawable/share"
            app:text="공유"
            app:stick="false">

        </com.example.hp.xmoblie.Custom.SideStick_BTN>

    </LinearLayout>
</LinearLayout>
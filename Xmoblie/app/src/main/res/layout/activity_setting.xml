<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="출근 시간 설정"
                android:textColor="#73F1E2"
                android:textSize="15dp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#8073F1E2">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/startHourUpBtn"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/double_arrow"
                        android:rotation="180" />

                    <TextView
                        android:id="@+id/tvStartHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="00"
                        android:textColor="#73F1E2"
                        android:textSize="80dp" />

                    <Button
                        android:id="@+id/startHourDownBtn"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/double_arrow" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" : "
                    android:textColor="#73F1E2"
                    android:textSize="80dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/startMinuteUpBtn"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/double_arrow"
                        android:rotation="180" />

                    <TextView
                        android:id="@+id/tvStartMinute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="00"
                        android:textColor="#73F1E2"
                        android:textSize="80dp" />

                    <Button
                        android:id="@+id/startMinuteDownBtn"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/double_arrow" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#8073F1E2">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="퇴근 시간 설정"
                android:textColor="#73F1E2"
                android:textSize="15dp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#8073F1E2">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/hourUpBtn"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/double_arrow"
                        android:rotation="180" />

                    <TextView
                        android:id="@+id/tvHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="00"
                        android:textColor="#73F1E2"
                        android:textSize="80dp" />

                    <Button
                        android:id="@+id/hourDownBtn"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/double_arrow" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" : "
                    android:textColor="#73F1E2"
                    android:textSize="80dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/minuteUpButton"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/double_arrow"
                        android:rotation="180" />

                    <TextView
                        android:id="@+id/tvMinute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="00"
                        android:textColor="#73F1E2"
                        android:textSize="80dp" />

                    <Button
                        android:id="@+id/minuteDownBtn"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/double_arrow" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#8073F1E2">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="데이터 경고 설정"
                android:textColor="#73F1E2"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#8073F1E2">

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.sdsmdg.harjot.crollerTest.Croller
                    android:id="@+id/detaSeekBar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    app:min="0"
                    app:max="1024"
                    android:layout_centerInParent="true"
                    app:back_circle_color="#EDEDED"
                    app:indicator_color="#73F1E2"
                    app:indicator_width="10"
                    app:is_continuous="true"
                    app:label_color="#73F1E2"
                    app:main_circle_color="#FFFFFF"
                    app:progress_primary_color="#73F1E2"
                    app:progress_secondary_color="#BEBEBE"
                    app:start_offset="45"
                    app:label_size="50"
                    app:label="0MB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="80dp"
                    android:text="0B"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="20dp"
                    android:text="1GB"
                    android:textSize="12dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#8073F1E2">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dailyCheerSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="응원 문구 설정"
                    android:textColor="#73F1E2"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/dailyCheerEditBtn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/upload"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#8073F1E2"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="월요일"
                            android:textColor="#73F1E2"
                            android:textStyle="bold"
                            />

                        <EditText
                            android:id="@+id/MondayCheerText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="오늘은 월요일입니다."/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="화요일"
                            android:textColor="#73F1E2"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/TuesCheerText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="오늘은 화요일입니다."/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="수요일"
                            android:textColor="#73F1E2"
                            android:textStyle="bold"
                            />

                        <EditText
                            android:id="@+id/WednesdayCheerText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="오늘은 수요일입니다."/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="목요일"
                            android:textColor="#73F1E2"
                            android:textStyle="bold"
                            />

                        <EditText
                            android:id="@+id/Thursday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="오늘은 목요일입니다."/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="금요일"
                            android:textColor="#73F1E2"
                            android:textStyle="bold"
                            />

                        <EditText
                            android:id="@+id/FridayCheerText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="오늘은 금요일입니다."/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#8073F1E2">

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="#73F1E2"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#8073F1E2">

                </LinearLayout>
                <Button
                    android:id="@+id/btnLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOG OUT"
                    android:background="#73F1E2"
                    android:textColor="#2b2b2b"/>
            </LinearLayout>

    </ScrollView>

</LinearLayout>